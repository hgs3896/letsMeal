<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/submitBtn"
        android:layout_width="267dp"
        android:layout_height="58dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="28dp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:text="일정 등록"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorLink="@color/design_default_color_primary_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/participantsText"
        android:layout_width="335dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="336dp"
        android:ems="10"
        android:hint="참석자 이름 입력"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titleText"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="제목 입력"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dateText"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="날짜 선택"
        android:inputType="date"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <EditText
        android:id="@+id/timeText"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="시간 선택"
        android:inputType="time"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@+id/dateText"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <EditText
        android:id="@+id/descriptionText"
        android:layout_width="332dp"
        android:layout_height="135dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="일정 설명을 적어주세요."
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/participantsText" />

    <TextView
        android:id="@+id/personNotFoundLabel"
        android:layout_width="142dp"
        android:layout_height="18dp"
        android:layout_marginStart="32dp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/participantsText" />

    <EditText
        android:id="@+id/placeText"
        android:layout_width="334dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="장소 입력"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

</androidx.constraintlayout.widget.ConstraintLayout>